<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Hosting Sessions </h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Public</th>
                        <th>Participents</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @hosting_sessions.each do |hosting_session| %>
                        <tr>
                            <td><%= hosting_session.name %></td>
                            <td><%= hosting_session.date %></td>
                            <td><%= hosting_session.public %></td>
                            <td>
                                <%= hosting_session.hosting_session_spots.count %> Session Spots / <%= hosting_session.children.count %> Children<br/>
                                <%= hosting_session.hosting_session_spots.on_hold.count %> On-Hold /  <%= hosting_session.hosting_session_spots.hosted.count %> Hosted /  <%= hosting_session.hosting_session_spots.available.count %> Available
                            </td>
                            <td>
                                <div class="btn-group">
                                    <%= link_to hosting_session, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                                        <i class="fa fa-search"></i>
                                    <% end %>
                                    <%= link_to edit_hosting_session_path(hosting_session), class: 'btn btn-sm btn-outline dim btn-info' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to hosting_session, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline dim btn-danger' do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <div class="btn">
                    <%= link_to new_hosting_session_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-plus"></i> New Hosting Session
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>