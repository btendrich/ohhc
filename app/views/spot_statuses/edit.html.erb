<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h1>Editing Spot Status</h1>
            </div>
            <div class="ibox-content">
                <%= render 'form', spot_status: @spot_status %>

                <hr>
                <div class="btn">
                    <%= link_to spot_statuses_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-chevron-left"></i> Back
                    <% end %>
                    <%= link_to @spot_status, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-search"></i> Show
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>