<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Spot Statuses </h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Color</th>
                                                <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @spot_statuses.each do |spot_status| %>
                        <tr>
                            <td><%= spot_status.name %></td>
                            <td><%= spot_status.color %></td>
                                                        <td>
                                <div class="btn-group">
                                    <%= link_to spot_status, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                                        <i class="fa fa-search"></i>
                                    <% end %>
                                    <%= link_to edit_spot_status_path(spot_status), class: 'btn btn-sm btn-outline dim btn-info' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to spot_status, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline dim btn-danger' do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <div class="btn">
                    <%= link_to new_spot_status_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-plus"></i> New Spot Status
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>