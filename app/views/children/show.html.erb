<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Children ID #<%= @child.id %></h5>
            </div>
            <div class="ibox-content">
                                <p>
                    <strong>Name:</strong>
                    <%= @child.name %>
                </p>

                                <p>
                    <strong>Country:</strong>
                    <%= @child.country %>
                </p>

                                <p>
                    <strong>Size:</strong>
                    <%= @child.size %>
                </p>

                                <p>
                    <strong>Age range:</strong>
                    <%= @child.age_range %>
                </p>

                                <p>
                    <strong>Gender:</strong>
                    <%= @child.gender %>
                </p>

                                <p>
                    <strong>Description:</strong>
                    <%= @child.description %>
                </p>

                                <p>
                    <strong>Notes:</strong>
                    <%= @child.notes %>
                </p>

                                
                <hr>
                <div class="btn">
                    <%= link_to children_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-chevron-left"></i> Back
                    <% end %>
                    <%= link_to edit_child_path(@child), class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-edit"></i> Edit Child
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>