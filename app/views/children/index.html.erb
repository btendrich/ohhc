<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Children </h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Country</th>
                        <th>Size</th>
                        <th>Age range</th>
                        <th>Gender</th>
                        <th>Description</th>
                        <th>Notes</th>
                                                <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @children.each do |child| %>
                        <tr>
                            <td><%= child.name %></td>
                            <td><%= child.country %></td>
                            <td><%= child.size %></td>
                            <td><%= child.age_range %></td>
                            <td><%= child.gender %></td>
                            <td><%= child.description %></td>
                            <td><%= child.notes %></td>
                                                        <td>
                                <div class="btn-group">
                                    <%= link_to child, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                                        <i class="fa fa-search"></i>
                                    <% end %>
                                    <%= link_to edit_child_path(child), class: 'btn btn-sm btn-outline dim btn-info' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to child, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline dim btn-danger' do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <div class="btn">
                    <%= link_to new_child_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-plus"></i> New Child
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>