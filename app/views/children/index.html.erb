<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Children </h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Identifier</th>
                        <th>Country</th>
                        <th>Birthday</th>
                        <th>Gender</th>
                        <th>Description</th>
                        <th>Sibling notes</th>
                        <th>Orphanage</th>
                        <th>Legal status</th>
                                                <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @children.each do |child| %>
                        <tr>
                            <td><%= child.first_name %></td>
                            <td><%= child.last_name %></td>
                            <td><%= child.identifier %></td>
                            <td><%= child.country %></td>
                            <td><%= child.birthday %></td>
                            <td><%= child.gender %></td>
                            <td><%= child.description %></td>
                            <td><%= child.sibling_notes %></td>
                            <td><%= child.orphanage %></td>
                            <td><%= child.legal_status %></td>
                                                        <td>
                                <div class="btn-group">
                                    <%= link_to child, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                                        <i class="fa fa-search"></i>
                                    <% end %>
                                    <%= link_to edit_child_path(child), class: 'btn btn-sm btn-outline dim btn-info' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to child, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline dim btn-danger' do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <div class="btn">
                    <%= link_to new_child_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-plus"></i> New Child
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>