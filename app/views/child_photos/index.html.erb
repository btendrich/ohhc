<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Child Photos </h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Child</th>
                        <th>Description</th>
                        <th>Key</th>
                        <th>Row order</th>
                                                <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @child_photos.each do |child_photo| %>
                        <tr>
                            <td><%= child_photo.child.name %></td>
                            <td><%= child_photo.description %></td>
                            <td><%= child_photo.key %></td>
                            <td><img src="https://s3.amazonaws.com/ohhc-photos/<%= child_photo.key %>_tn.jpg"></td>
                                                        <td>
                                <div class="btn-group">
                                    <%= link_to child_photo, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                                        <i class="fa fa-search"></i>
                                    <% end %>
                                    <%= link_to edit_child_photo_path(child_photo), class: 'btn btn-sm btn-outline dim btn-info' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to child_photo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline dim btn-danger' do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <div class="btn">
                    <%= link_to new_child_photo_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-plus"></i> New Child Photo
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>