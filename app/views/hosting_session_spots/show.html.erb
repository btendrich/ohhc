<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Hosting Session Spots ID #<%= @hosting_session_spot.id %></h5>
            </div>
            <div class="ibox-content">
                                <p>
                    <strong>Status:</strong>
                    <%= @hosting_session_spot.status_id %>
                </p>

                                <p>
                    <strong>Hosting session:</strong>
                    <%= @hosting_session_spot.hosting_session_id %>
                </p>

                                <p>
                    <strong>Description:</strong>
                    <%= @hosting_session_spot.description %>
                </p>

                                <p>
                    <strong>Scholarship:</strong>
                    <%= @hosting_session_spot.scholarship %>
                </p>

                                <p>
                    <strong>Family:</strong>
                    <%= @hosting_session_spot.family_id %>
                </p>

                                
                <hr>
                <div class="btn">
                    <%= link_to hosting_session_spots_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-chevron-left"></i> Back
                    <% end %>
                    <%= link_to edit_hosting_session_spot_path(@hosting_session_spot), class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-edit"></i> Edit Hosting Session Spot
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>