<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Hosting Session Spots </h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Children</th>
                        <th>Status</th>
                        <th>Hosting session</th>
                        <th>Description</th>
                        <th>Scholarship</th>
                        <th>Family</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @hosting_session_spots.each do |hosting_session_spot| %>
                        <tr>
                            <td>
                                <% hosting_session_spot.children.each do |child| %>
                                <%= child.identifier %>: <%= child.full_name %><br/>
                                <% end %>
                            </td>
                            <td><%= hosting_session_spot.status.name %></td>
                            <td><%= hosting_session_spot.hosting_session.name %></td>
                            <td><%= hosting_session_spot.description %></td>
                            <td><%= hosting_session_spot.scholarship %></td>
                            <td><%= hosting_session_spot.family&.short_name %></td>
                                                        <td>
                                <div class="btn-group">
                                    <%= link_to hosting_session_spot, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                                        <i class="fa fa-search"></i>
                                    <% end %>
                                    <%= link_to edit_hosting_session_spot_path(hosting_session_spot), class: 'btn btn-sm btn-outline dim btn-info' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to hosting_session_spot, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline dim btn-danger' do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <div class="btn">
                    <%= link_to new_hosting_session_spot_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-plus"></i> New Hosting Session Spot
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>