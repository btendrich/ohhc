<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Hosting Periods </h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Begins</th>
                        <th>Visible</th>
                                                <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @hosting_periods.each do |hosting_period| %>
                        <tr>
                            <td><%= hosting_period.name %></td>
                            <td><%= hosting_period.begins %></td>
                            <td><%= hosting_period.visible %></td>
                                                        <td>
                                <div class="btn-group">
                                    <%= link_to hosting_period, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                                        <i class="fa fa-search"></i>
                                    <% end %>
                                    <%= link_to edit_hosting_period_path(hosting_period), class: 'btn btn-sm btn-outline dim btn-info' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to hosting_period, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline dim btn-danger' do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <div class="btn">
                    <%= link_to new_hosting_period_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-plus"></i> New Hosting Period
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
