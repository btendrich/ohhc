<p id="notice"><%= notice %></p>

<h1>Hosting Periods</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Striped Table </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">Config option 1</a>
                        </li>
                        <li>
                            <a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Start Date</th>
                        <th>Visible</th>
                        <th># of Participants</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @hosting_periods.each do |hosting_period| %>
                        <tr>
                            <td><%= hosting_period.name %></td>
                            <td><%= hosting_period.begins %></td>
                            <td><%= hosting_period.visible %></td>
                            <td>[]</td>
                            <td><%= link_to "edit", edit_hosting_period_path(hosting_period), class: "btn btn-mini", data: {remote: true, toggle: "modal", target: "#myModal"} %> <%= link_to 'Edit', edit_hosting_period_path(hosting_period) %> <%= link_to 'Destroy', hosting_period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <%= link_to 'New Hosting Period', new_hosting_period_path %>
            </div>
        </div>
    </div>
</div>
<div id="myModal"></div>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Begins</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hosting_periods.each do |hosting_period| %>
      <tr>
        <td><%= hosting_period.name %></td>
        <td><%= hosting_period.begins %></td>
        <td><%= hosting_period.visible %></td>
        <td><%= link_to 'Show', hosting_period %></td>
        <td><%= link_to 'Edit', edit_hosting_period_path(hosting_period) %></td>
        <td><%= link_to 'Destroy', hosting_period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Hosting Period', new_hosting_period_path %>
