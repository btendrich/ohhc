<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Families ID #<%= @family.id %></h5>
            </div>
            <div class="ibox-content">
                                <p>
                    <strong>First names:</strong>
                    <%= @family.first_names %>
                </p>

                                <p>
                    <strong>Last name:</strong>
                    <%= @family.last_name %>
                </p>

                                <p>
                    <strong>Address:</strong>
                    <%= @family.address %>
                </p>

                                <p>
                    <strong>City:</strong>
                    <%= @family.city %>
                </p>

                                <p>
                    <strong>State:</strong>
                    <%= @family.state %>
                </p>

                                <p>
                    <strong>Zip:</strong>
                    <%= @family.zip %>
                </p>

                                
                <hr>
                <div class="btn">
                    <%= link_to families_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-chevron-left"></i> Back
                    <% end %>
                    <%= link_to edit_family_path(@family), class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-edit"></i> Edit Family
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>