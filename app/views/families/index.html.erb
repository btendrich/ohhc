<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Families </h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>First names</th>
                        <th>Last name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Zip</th>
                                                <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @families.each do |family| %>
                        <tr>
                            <td><%= family.first_names %></td>
                            <td><%= family.last_name %></td>
                            <td><%= family.address %></td>
                            <td><%= family.city %></td>
                            <td><%= family.state %></td>
                            <td><%= family.zip %></td>
                                                        <td>
                                <div class="btn-group">
                                    <%= link_to family, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                                        <i class="fa fa-search"></i>
                                    <% end %>
                                    <%= link_to edit_family_path(family), class: 'btn btn-sm btn-outline dim btn-info' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to family, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline dim btn-danger' do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <div class="btn">
                    <%= link_to new_family_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-plus"></i> New Family
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>