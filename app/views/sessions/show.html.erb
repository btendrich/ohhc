<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Sessions ID #<%= @session.id %></h5>
            </div>
            <div class="ibox-content">
                                <p>
                    <strong>Name:</strong>
                    <%= @session.name %>
                </p>

                                <p>
                    <strong>Beings:</strong>
                    <%= @session.beings %>
                </p>

                                <p>
                    <strong>Public:</strong>
                    <%= @session.public %>
                </p>

                                
                <hr>
                <div class="btn">
                    <%= link_to sessions_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-chevron-left"></i> Back
                    <% end %>
                    <%= link_to edit_session_path(@session), class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-edit"></i> Edit Session
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>