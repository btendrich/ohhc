<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Session Spots ID #<%= @session_spot.id %></h5>
            </div>
            <div class="ibox-content">
                                <p>
                    <strong>Child:</strong>
                    <%= @session_spot.child_id %>
                </p>

                                <p>
                    <strong>Hosting session:</strong>
                    <%= @session_spot.hosting_session_id %>
                </p>

                                <p>
                    <strong>Spot status:</strong>
                    <%= @session_spot.spot_status_id %>
                </p>

                                <p>
                    <strong>Scholarship:</strong>
                    <%= @session_spot.scholarship %>
                </p>

                                <p>
                    <strong>Row order:</strong>
                    <%= @session_spot.row_order %>
                </p>

                                <p>
                    <strong>Public notes:</strong>
                    <%= @session_spot.public_notes %>
                </p>

                                <p>
                    <strong>Private notes:</strong>
                    <%= @session_spot.private_notes %>
                </p>

                                
                <hr>
                <div class="btn">
                    <%= link_to session_spots_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-chevron-left"></i> Back
                    <% end %>
                    <%= link_to edit_session_spot_path(@session_spot), class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-edit"></i> Edit Session Spot
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>