<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Child Notes </h5>
            </div>
            <div class="ibox-content">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Child</th>
                        <th>Title</th>
                        <th>Text</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% @child_notes.each do |child_note| %>
                        <tr>
                            <td><%= child_note.child.full_name %></td>
                            <td><%= child_note.title %></td>
                            <td><%= child_note.text %></td>
                            <td>
                                <div class="btn-group">
                                    <%= link_to child_note, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                                        <i class="fa fa-search"></i>
                                    <% end %>
                                    <%= link_to edit_child_note_path(child_note), class: 'btn btn-sm btn-outline dim btn-info' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to child_note, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline dim btn-danger' do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <div class="btn">
                    <%= link_to new_child_note_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-plus"></i> New Child Note
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>