<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5><%= plural_table_name.titleize %> ID #<%%= @<%= singular_table_name %>.id %></h5>
            </div>
            <div class="ibox-content">
                <% attributes.reject(&:password_digest?).each do |attribute| -%>
                <p>
                    <strong><%= attribute.human_name %>:</strong>
                    <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
                </p>

                <% end -%>
                
                <hr>
                <div class="btn">
                    <%%= link_to <%= index_helper %>_path, class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-chevron-left"></i> Back
                    <%% end %>
                    <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-sm btn-outline dim btn-primary' do %>
                        <i class="fa fa-edit"></i> Edit <%= singular_table_name.titleize %>
                    <%% end %>
                </div>
            </div>
        </div>
    </div>
</div>